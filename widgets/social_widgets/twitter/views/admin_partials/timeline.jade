div(ng-controller="TwitterTimelineController")
    div.well(style="margin-top: 15px;")
        div.row
            div.col-xs-9(ng-init="timeline=false")
                h5.title Twitter timeline
                    &nbsp;
                    a.btn.btn-default.btn-xs(ng-click="timeline=!timeline")
                        span= __('Show actions')
                p= __('Twitter timeline widget shows info about your timeline in real time')
            div.col-xs-3
                toggle-switch.pull-right.switch-small(model="enabled")
            div.col-xs-12(ng-slide-show="timeline")
                div.panel.panel-default
                    div.panel-heading
                        h3.panel-title= __('Twitter timeline Data')
                    div.panel-body
                        form.create-profile(ng-submit="validator()")
                            label= __('Twitter username')
                            input.form-control(ng-model="formData.username", required)
                            br
                            label= __('Twitter widget ID')
                            input.form-control(ng-model="formData.widget_id", required)
                            br
                            input.btn.pull-right(type="submit", value="#{__('Add data')}")