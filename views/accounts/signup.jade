block content
    #signup
        .container
          .row.header
            .col-md-12
              h3.logo
                a(ui-sref='/') #{title}
              h4= __('Set up your new account today.')

          .row
            .col-md-12
              .wrapper.clearfix
                .formy
                  .row
                    .col-md-12
                      form(role='form', action="/accounts/signup", method="post")
                        .form-group.has-feedback(ng-class="[errors.username ? 'has-error' : '', !errors.username && username ? 'has-success' : '']")
                          label(for='name')= __('Username')
                          input#name.form-control(type='text', placeholder='Username', name="username", autofocus='', ng-model="username", ng-blur="checkUser()")
                          i.glyphicon.form-control-feedback(ng-if="username", ng-class="errors.username ? 'glyphicon-remove' : 'glyphicon-ok'")
                        .form-group.has-feedback(ng-class="[errors.email ? 'has-error' : '', !errors.email && email ? 'has-success' : '']")
                          label(for='email')= __('Email address')
                          input#email.form-control(type='text', placeholder='Email', name="email", ng-model="email")
                          i.glyphicon.form-control-feedback(ng-if="email", ng-class="errors.email ? 'glyphicon-remove' : 'glyphicon-ok'")
                        .form-group.has-feedback(ng-class="[errors.password ? 'has-error' : '', !errors.password && password ? 'has-success' : '']")
                          label(for='password')= __('Password')
                          input#password.form-control(type='password', placeholder='Password',name="password", ng-model="password")
                          i.glyphicon.form-control-feedback(ng-if="password", ng-class="errors.password ? 'glyphicon-remove' : 'glyphicon-ok'")
                        //- .checkbox
                          label
                            input(type='checkbox')
                            | You have read & agree to the
                            a(href='#') Terms of service
                            | .
                        .submit
                          button.btn.btn-lg.btn-primary(type='submit', ng-disabled="disabled")= __('Create my account')
              .already-account
                span= __('Already have an account?')
                | &nbsp;
                a(ui-sref='login', data-toggle='popover', data-placement='top', data-content='Go to sign in!', data-trigger='manual')= __('Sign in here')
        script(type='text/javascript')
          $(function () {
              $(".already-account a").popover();
              $(".already-account a").popover('show');
          });
